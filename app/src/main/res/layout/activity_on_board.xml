<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoard.OnBoard"
    android:background="#191818">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/select1"
            android:layout_marginBottom="110dp"
            />

        <TextView
            android:id="@+id/begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewPager"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="119dp"
            android:textSize="24sp"
            android:layout_marginTop="19dp"
            android:textColor="#8E8B8B"
            />

        <TextView
            android:id="@+id/txt_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пропустить"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="19dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/indicator_selected"
            />

        <ImageView
            android:id="@+id/select1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/indicator_selected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="82dp"
            android:layout_marginLeft="160dp"
            />

        <ImageView
            android:id="@+id/select2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/indicator_unselected"
            app:layout_constraintLeft_toRightOf="@id/select1"
            app:layout_constraintBottom_toBottomOf="@id/select1"
            android:layout_marginLeft="14dp"
            />

        <ImageView
            android:id="@+id/select3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/indicator_unselected"
            app:layout_constraintLeft_toRightOf="@id/select2"
            app:layout_constraintBottom_toBottomOf="@id/select2"
            android:layout_marginLeft="14dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>